@model  List<CuaHangXeMay_Web.Models.XeMay>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImge = "";
        var img = item.ImageXe.FirstOrDefault(x => x.isdefault);
        if (img != null)
        {
            strImge = img.image;
        }

        <div class="product-item @item.Iddanhmuc">
            <div class="product discount product_filter" >
                <div class="product_image">
                    <img src="@strImge" alt="@item.Tenxe">
                </div>
                <div class="favorite favorite_left"></div>
                <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$20</span></div>
                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.alias-p@(item.Maxe)">@item.Tenxe</a></h6>
                    @if (item.Giasale > 0)
                    {
                        <div class="product_price">@CH_XEMAYMVC.Common.Common.FormatNumber(item.Giasale,0)<span>@CH_XEMAYMVC.Common.Common.FormatNumber(item.Giaxe,0)</span></div>
                    }
                    else
                    {
                        <div class="product_price">@CH_XEMAYMVC.Common.Common.FormatNumber(item.Giaxe,0)</div>
                    }
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Maxe">Thêm vào giỏ hàng</a></div>
        </div>
    }
}



