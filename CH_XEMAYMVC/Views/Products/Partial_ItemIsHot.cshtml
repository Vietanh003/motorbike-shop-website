@model  List<CuaHangXeMay_Web.Models.XeMay>
@if (Model != null && Model.Any())
{
   
    <div class="best_sellers">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title new_arrivals_title">
                    <h2>Sản phẩm Hot</h2>
                </div>
            </div>
        </div>
        
       <div class="row">
				<div class="col">
					<div class="product_slider_container">
						<div class="owl-carousel owl-theme product_slider owl-loaded owl-drag">
                            @foreach (var item in Model)
                            {
                                var strImge = "";
                                var img = item.ImageXe.FirstOrDefault(x => x.isdefault);
                                if (img != null)
                                {
                                    strImge = img.image;
                                }

                                <div class="owl-item product_slider_item">
                                    <div class="product-item">
                                        <div class="product discount">
                                            <div class="product_image">
                                                <img src="@strImge" alt="">
                                            </div>
                                            <div class="favorite favorite_left"></div>

                                            <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>Hot</span></div>
                                            <div class="product_info">
                                                <h6 class="product_name"><a href="single.html">@item.Tenxe</a></h6>
                                                @if (item.Giasale > 0)
                                                {
                                                    <div class="product_price">@CH_XEMAYMVC.Common.Common.FormatNumber(item.Giasale,0)<span>@CH_XEMAYMVC.Common.Common.FormatNumber(item.Giaxe,0)</span></div>
                                                }
                                                else
                                                {
                                                    <div class="product_price">@item.Giaxe</div>
                                                }
                                            </div>
                                        </div>
                                        <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Maxe">Thêm vào giỏ hàng</a></div>
                                    </div>
                                </div>
                            }


							

							
						<div class="owl-stage-outer"><div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 2550px;">
                            <div class="owl-item active" style="width: 255px;">

                          
                            </div></div></div><div class="owl-nav disabled"><div class="owl-prev">prev</div><div class="owl-next">next</div></div><div class="owl-dots disabled"></div></div>

						<!-- Slider Navigation -->

						<div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
							<i class="fa fa-chevron-left" aria-hidden="true"></i>
						</div>
						<div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
							<i class="fa fa-chevron-right" aria-hidden="true"></i>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
                  
}




