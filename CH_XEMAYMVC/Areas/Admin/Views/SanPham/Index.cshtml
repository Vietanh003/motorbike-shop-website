
@model PagedList.PagedList<CuaHangXeMay_Web.Models.XeMay>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = " Danh Sách Xe Máy";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/SanPham" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản Lý @ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Home">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh Sách @ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/Admin/SanPham/Add" class="btn btn-primary">Thêm Mới</a>
                <a href="#" class="btn btn-danger btnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    @using (Html.BeginForm("index", "SanPham"))
                    {
                        <div class="input-group input-group-lg">
                            @Html.TextBox("searchtext")
                            @*<input type="search" name="searchtext" class="" placeholder="Tìm kiếm.." >*@
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-lg btn-default">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    }

                </div>

            </div>
            <table class="table table hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên Xe </th>
                        @*<th>Danh Mục</th>*@
                        <th>Số Lượng</th>
                        <th>Gía</th>
                        <th>Ngày Tạo</th>
                        <th>Hiển Thị</th>
                      
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            var strCheck = item.IsActive ? "<a href='#'><i class='fa fa-check text-success'></i></a>" : "<a href='#'><i class='fas fa-times text-danger'></i></a>";
                            <tr id="trow_@item.Maxe">
                                <td><input type="checkbox" class="cbkItem" value="@item.Maxe" /></td>
                                <td>@i</td>
                                <td>
                                    @if (item.ImageXe.FirstOrDefault(x => x.isdefault) != null)
                                    {
                                        <img class="imgproduct" data-id="@item.Maxe" src="@item.ImageXe.FirstOrDefault(x => x.isdefault).image" width="50" />
                                    }
                                </td>

                                <td>@item.Tenxe</td>
                                @*<td>@item.DanhMucSanPham?.Tieude</td>*@

                                <td>@item.soluong</td>
                                <td>@item.Giaxe</td>
                                <td>@item.ngaytao.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <a href="#" data-id="@item.Maxe" class="btnActive"> @Html.Raw(strCheck)</a>

                                </td>
                                <td>
                                    <a href="/Admin/SanPham/Edit/@item.Maxe" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" data-id="@item.Maxe" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div style="text-align:center">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->
<div id="dialog">
    <iframe id="myIframe" style="border:0;width:100%;height:100%;"></iframe>
</div>
   
@section scripts{
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
        <script>

            $(document).ready(function () {
                $("#dialog").dialog({
                    autoOpen: false,
                    show: "fade",
                    hide: "fade",
                    modal: true,
                    height: '500',
                    width: '600',
                    resizable: true,
                    title: 'Quản lý ảnh sản phẩm',
                    close: function () {
                        window.location.reload();
                    }
                });
                $('body').on("click", ".imgproduct", function () {
                    var proid = $(this).attr("data-id");
                    $("#dialog #myIframe").attr("src", "/Admin/AnhSanPham/Index?productId=" + proid)
                    $('#dialog').dialog('open');
                    return false;
                });
            });
        $(document).ready(function () {
            $('body').on('click', '.btnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkboxes = $(this).parents('.card').find('tr td input:checkbox');

                checkboxes.each(function () {
                    if (this.checked) {
                        var _id = $(this).val();
                        if (str.length === 0) {
                            str += _id;
                        } else {
                            str += "," + _id;
                        }
                    }
                });

                if (str.length > 0) {
                    var conf = confirm('Bạn có muốn xóa các bản ghi này không?');
                    if (conf) {
                        $.ajax({
                            url: '/Admin/SanPham/DeleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });

            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkboxes = $(this).parents('.card-body').find('tr td input:checkbox');
                checkboxes.prop('checked', checkStatus);
            });
        });

        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có muốn xóa không')
                if (conf == true) {
                    $.ajax({
                        url: '/Admin/SanPham/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });
        });
        $(document).ready(function () {
            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data("id");

                $.ajax({
                    url: '/Admin/SanPham/IsActive',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>");
                            }

                        }
                    },
                    error: function (err) {
                        console.error(err);
                    }
                });
            });
        });


    </script>
}




